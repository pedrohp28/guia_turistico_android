<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7ED6E1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="Guia Turistico Sorocaba"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#9C27B0"
                android:textSize="60sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:fontFamily="cursive"
                android:text="Zoológico"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#9C27B0"
                android:textSize="40sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="276dp"
                app:srcCompat="@drawable/frente_zoologico" />

            <Button
                android:id="@+id/btnSaibaMais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnZoologico"
                android:text="Saiba Mais" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:fontFamily="cursive"
                android:text="Iguatemi Esplanada"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#9C27B0"
                android:textSize="40sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="191dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/entrada_iguatemi" />

            <Button
                android:id="@+id/btnSaibaMais2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnIguatemi"
                android:text="Saiba Mais" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:fontFamily="cursive"
                android:text="Parque Ecológico Chico Mendes"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#9C27B0"
                android:textSize="40sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="233dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/entrada_parque_ecologico" />

            <Button
                android:id="@+id/btnSaibaMais3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnParque"
                android:text="Saiba Mais" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>